﻿@using Microsoft.AspNetCore.Identity
@using Microsoft.AspNetCore
@model UsersRolesViewModel

@{
    ViewData["Title"] = "Edit User Account";
}


<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-12 col-lg-10">
            <div class="row g-0 shadow-sm border rounded-3 overflow-hidden" style="min-height: 420px;">

                <!-- Image -->
                <div class="col-md-5 d-none d-md-block bg-light position-relative accountRoles-side-hero">
                    <div class="position-absolute bottom-0 start-0 p-4 text-muted small" style="max-width: 260px;">
                        Edit the accounts roles, be sure to not give admin privileges to untrusted users.
                    </div>
                </div>

                <div class="col-12 col-md-7 bg-white">
                    <div class="d-flex justify-content-between align-items-center p-3 pb-0">
                        <h4 class="mb-0">Account Roles Edit</h4>
                    </div>

                    <div class="p-3 pt-2">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger py-2 mb-3" role="alert" style="display:none"></div>

                        <form asp-action="Editar" method="post">
                            <input type="hidden" asp-for="Id" />

                            <div class="form-group">
                                <label asp-for="Email"></label>
                                <input asp-for="Email" value="@Model.Email" class="form-control" readonly />
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Role"></label>
                                <select asp-for="Role" asp-items="Model.Roles" class="form-control"></select>
                            </div>
                            <div class="mb-3">
                                <a asp-action="Index" class="btn btn-outline-secondary">Cancel</a>
                                <button type="submit" class="btn btn-danger">Save</button>
                            </div>
                        </form>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}