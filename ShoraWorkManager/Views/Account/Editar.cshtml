﻿@using Microsoft.AspNetCore.Identity
@using Microsoft.AspNetCore
@model UsersRolesViewModel

@{
    ViewData["Title"] = "Edit User Account";
}

<h1>Edit</h1>

<form asp-action="Editar" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label asp-for="Email"></label>
        <input asp-for="Email" value="@Model.Email" class="form-control" readonly />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Role"></label>
        <select asp-for="Role" asp-items="Model.Roles" class="form-control"></select>
    </div>
    <div class="mb-3">
        <button type="submit" class="btn btn-danger">Save</button>
    </div>
</form>

<div class="mb-3">
    <a class="btn btn-primary " asp-action="Index">Go back to the List</a>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}