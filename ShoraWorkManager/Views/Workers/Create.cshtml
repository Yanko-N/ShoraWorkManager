@model Persistence.Models.Worker

@{
    ViewData["Title"] = "Create Worker";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-12 col-lg-10">
            <div class="row g-0 shadow-sm border rounded-3 overflow-hidden" style="min-height: 420px;">

                <!-- Image -->
                <div class="col-md-5 d-none d-md-block bg-light position-relative worker-side-hero">
                    <div class="position-absolute bottom-0 start-0 p-4 text-muted small" style="max-width: 260px;">
                    </div>
                </div>

                <div class="col-12 col-md-7 bg-white">
                    <div class="d-flex justify-content-between align-items-center p-3 pb-0">
                        <h4 class="mb-0">Worker Registering</h4>
                    </div>

                    <div class="p-3 pt-2">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger py-2 mb-3" role="alert" style="display:none"></div>

                        <form asp-action="Create">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="form-group mb-3">
                                <label asp-for="Name" class="control-label"> Name</label>
                                <input asp-for="Name" class="form-control" />
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                            <div class="form-group mb-3">
                                <label asp-for="PricePerHour" class="control-label"> Price Per Hour </label>
                                <input asp-for="PricePerHour" type="number" class="form-control" />
                                <span asp-validation-for="PricePerHour" class="text-danger"></span>
                            </div>

                            <div class="form-group d-flex gap-2 justify-content-end">
                                <a asp-action="Index" class="btn btn-outline-secondary">Cancel</a>
                                <button type="submit" class="btn btn-primary px-4">Create</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

