@model Persistence.Models.ConstructionSite

@{
    ViewData["Title"] = "Create";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-12 col-lg-10">
            <div class="row g-0 shadow-sm border rounded-3 overflow-hidden" style="min-height: 420px;">

                <!-- Image -->
                <div class="col-md-5 d-none d-md-block bg-light position-relative constructionSite-side-hero">
                    <div class="position-absolute bottom-0 start-0 p-4 text-muted small" style="max-width: 260px;">
                        Manage your Constructions Sites, create new ones and keep your managment website clean and good
                    </div>
                </div>

                <div class="col-12 col-md-7 bg-white">
                    <div class="d-flex justify-content-between align-items-center p-3 pb-0">
                        <h4 class="mb-0">Construction Site</h4>
                    </div>

                    <div class="p-3 pt-2">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger py-2 mb-3" role="alert" style="display:none"></div>

                        <form asp-action="Create">
                            <div class="form-group">
                                <label asp-for="Name" class="control-label"></label>
                                <input asp-for="Name" class="form-control" />
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Description" class="control-label"></label>
                                <input asp-for="Description" class="form-control" />
                                <span asp-validation-for="Description" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Latitude" class="control-label"></label>
                                <input asp-for="Latitude" type="numeric" class="form-control" />
                                <span asp-validation-for="Latitude" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Longitude" class="control-label"></label>
                                <input asp-for="Longitude" type="numeric" class="form-control" />
                                <span asp-validation-for="Longitude" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="ClientId" class="control-label"></label>
                                <select asp-for="ClientId" class="form-control" asp-items="ViewBag.ClientId"></select>
                            </div>
                            <div class="form-group">
                                <a asp-action="Index" class="btn btn-outline-secondary">Cancel</a>
                                <input type="submit" value="Create" class="btn btn-primary" />
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
