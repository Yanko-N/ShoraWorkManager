@model Persistence.Models.ContructionSiteWorkedHoursWorker

<div class="row">
    <div class="col-md-4">
        <form id="createFormWorkedHours">
            @Html.AntiForgeryToken()

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input asp-for="ConstructionSiteId" type="hidden" value="@ViewBag.ConstructionSiteId" />

            <div class="form-group">
                <label asp-for="WorkerId" class="control-label"></label>
                <select asp-for="WorkerId" class ="form-control" asp-items="ViewBag.WorkerId"></select>
            </div>
            <div class="form-group">
                <label asp-for="WorkedHours" class="control-label"></label>
                <input asp-for="WorkedHours" class="form-control" />
                <span asp-validation-for="WorkedHours" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RegisteredAt" class="control-label"></label>
                <input asp-for="RegisteredAt" class="form-control" />
                <span asp-validation-for="RegisteredAt" class="text-danger"></span>
            </div>
            <div class="form-group">
                <button type="button" onclick="ReturnToIndexWorkedHours(@ViewBag.ConstructionSiteId)" class="btn btn-outline-secondary">Cancel</button>
                <button type="button" class="btn btn-primary" onclick="SubmitCreateConstructionWorkedHoursForm(@ViewBag.ConstructionSiteId)"> Add</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
