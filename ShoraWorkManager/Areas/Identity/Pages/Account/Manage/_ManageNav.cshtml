@using Application.Core
@using Persistence.Models
@{
    var isAdmin = User.IsInRole(AppConstants.Roles.ADMIN);
}
<div class="list-group list-group-flush rounded-3 shadow-sm">
    <a class="list-group-item list-group-item-action d-flex justify-content-between align-items-center @ManageNavPages.IndexNavClass(ViewContext)"
       id="profile" asp-page="./Index">
        <span>My Profile</span>
    </a>

    <a class="list-group-item list-group-item-action @ManageNavPages.EmailNavClass(ViewContext)"
       id="email" asp-page="./Email">
        <span>My Email</span>
    </a>

    <a class="list-group-item list-group-item-action @ManageNavPages.ChangePasswordNavClass(ViewContext)"
       id="change-password" asp-page="./ChangePassword">
        <span>My Password</span>
    </a>

    @if (isAdmin)
    {
        <a class="list-group-item list-group-item-action @ManageNavPages.CreateCreateAuthorizationNavClass(ViewContext)"
           id="create-token" asp-page="./CreateAuthorizationTokens">
            <span>Authorization Tokens</span>
        </a>

        <a class="list-group-item list-group-item-action @ManageNavPages.IndexPageControlNavClass(ViewContext)"
           id="create-token" asp-controller="Home" asp-action="ControlIndex">
            <span>Index Page Control</span>
        </a>
    }
</div>
