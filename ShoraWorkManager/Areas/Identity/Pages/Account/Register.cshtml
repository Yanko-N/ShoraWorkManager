@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<div class="position-relative hero-bg" style="height: 35vh;">
    <div class="overlay w-100 h-100 d-flex align-items-end">
        <div class="container text-white pb-4">
            <h1 class="fw-semibold mb-1">Create your account</h1>
            <p class="mb-0">Shora Contruction Business Management registration</p>
        </div>
    </div>
</div>

<div class="container my-5">
    <div class="mx-auto register-card bg-white">
        <div class="p-4 p-md-5">
            <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post" novalidate>
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3" role="alert"></div>

                <div class="form-floating mb-3">
                    <input asp-for="InputViewModel.FirstName" class="form-control" autocomplete="given-name" aria-required="true" placeholder="Manuel" />
                    <label asp-for="InputViewModel.FirstName"></label>
                    <span asp-validation-for="InputViewModel.FirstName" class="text-danger"></span>
                </div>

                <div class="form-floating mb-3">
                    <input asp-for="InputViewModel.LastName" class="form-control" autocomplete="family-name" aria-required="true" placeholder="Silva" />
                    <label asp-for="InputViewModel.LastName"></label>
                    <span asp-validation-for="InputViewModel.LastName" class="text-danger"></span>
                </div>

                <div class="form-floating mb-3">
                    <input asp-for="InputViewModel.Email" class="form-control" autocomplete="email" aria-required="true" placeholder="name@example.com" />
                    <label asp-for="InputViewModel.Email"></label>
                    <span asp-validation-for="InputViewModel.Email" class="text-danger"></span>
                </div>

                <div class="form-floating mb-3">
                    <input asp-for="InputViewModel.Password" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password" />
                    <label asp-for="InputViewModel.Password"></label>
                    <span asp-validation-for="InputViewModel.Password" class="text-danger"></span>
                </div>

                <div class="form-floating mb-3">
                    <input asp-for="InputViewModel.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password" />
                    <label asp-for="InputViewModel.ConfirmPassword"></label>
                    <span asp-validation-for="InputViewModel.ConfirmPassword" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="InputViewModel.AuthorizationToken" class="form-label fw-semibold"></label>
                    <div class="input-group">
                        <input asp-for="InputViewModel.AuthorizationToken" class="form-control" placeholder="Paste your token here" />
                        <button class="btn btn-outline-secondary" type="button" data-bs-toggle="tooltip" data-bs-title="Paste the one-time code given by your admin.">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-info" viewBox="0 0 16 16">
                                <path d="m8.93 6.588-2.29.287-.082.38.45.083c.294.07.352.176.288.469l-.738 3.468c-.194.897.105 1.319.808 1.319.545 0 1.178-.252 1.465-.598l.088-.416c-.2.176-.492.246-.686.246-.275 0-.375-.193-.304-.533zM9 4.5a1 1 0 1 1-2 0 1 1 0 0 1 2 0" />
                            </svg>
                        </button>
                    </div>
                    <small class="text-muted d-block mt-1">
                        Ask to the admin for this one-time code to register in the application.
                    </small>
                    <span asp-validation-for="InputViewModel.AuthorizationToken" class="text-danger"></span>
                </div>

                <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary">Register</button>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        document.querySelectorAll('[data-bs-toggle="tooltip"]').forEach(el => new bootstrap.Tooltip(el));
    </script>
}
